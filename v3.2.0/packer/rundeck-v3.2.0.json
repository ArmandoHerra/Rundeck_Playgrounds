{
    "builders": [
        {
            "ami_name": "Rundeck-v3.2.0-{{isotime | clean_resource_name}}",
            "instance_type": "t2.micro",
            "region": "us-east-1",
            "source_ami_filter": {
                "filters": {
                    "name": "CentOS Linux 7 x86_64 HVM EBS *",
                    "root-device-type": "ebs",
                    "virtualization-type": "hvm"
                },
                "most_recent": true,
                "owners": [
                    "679593333241"
                ]
            },
            "ssh_username": "centos",
            "tags": {
                "Base_AMI_Name": "{{ .SourceAMIName }}",
                "OS_Version": "CentOS 7",
                "Project": "Rundeck v3.2.0",
                "Release": "Latest"
            },
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "inline": [
                "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
            ],
            "type": "shell"
        },
        {
            "script": "packer/scripts/bash/install-base.sh",
            "type": "shell"
        },
        {
            "script": "packer/scripts/bash/install-java.sh",
            "type": "shell"
        },
        {
            "script": "packer/scripts/bash/install-docker.sh",
            "type": "shell"
        },
        {
            "script": "packer/scripts/bash/install-gradle.sh",
            "type": "shell"
        },
        {
            "script": "packer/scripts/bash/install-grails.sh",
            "type": "shell"
        },
        {
            "script": "packer/scripts/bash/install-rundeck.sh",
            "type": "shell"
        }
    ]
}